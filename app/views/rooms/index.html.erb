<div class="container">
  <% @rooms.each do |room| %>
  <div class="shadow bg-black mt-1">
    <div class=" bg-size bg-cover bg-center">
      <div class="p-4 h-32 flex items-end text-black">
        <h3 class="mb-2 text-4xl"><%= room.house.name %></h3>
        <h3 class="mb-2 text-4xl"><%= room.name %></h3>
      </div>
    </div>
    <div class="mt-8 pl-2 d-flex align-items-end justify-content-between">
      <%= link_to room_path(room) do %>
      <p class="no-underline mr-4 text-blue-500 hover:text-blue-400"><strong>En savoir plus</strong></p>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
