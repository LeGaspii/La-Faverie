<div class="container background p-2">
  <h3>T'inscrire</h3>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name) ) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs container">
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { placeholder: "Ton mail ..." }%>
      <%= f.input :first_name,
                  required: true,
                  autofocus: true,
                  input_html: { placeholder: "Ton nom ..." }%>
      <%= f.input :last_name,
                  required: true,
                  autofocus: true,
                  input_html: { placeholder: "Ton nom de famille ..." }%>
      <%= f.input :username,
                  required: true,
                  autofocus: true,
                  input_html: { placeholder: "Ton pseudo ... (Ton prÃ©nom si tu veux)" }%>
      <%= f.input :birth_date, as: :date, start_year: Date.today.year - 90, end_year: Date.today.year - 5,
                  required: true,
                  autofocus: true,
                  input_html: { placeholder: "" }%>
      <%= f.input :address,
                  required: true,
                  autofocus: true,
                  input_html: { placeholder: "Ton adresse..." }%>
      <%= f.input :photo, as: :file,
                  required: true %>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { placeholder: "nouveau mot de passe ..." } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { placeholder: "nouveau mot de passe ..." } %>
    </div>

  <div class="container">
    <div class="btn btn-primary m-3">
      <%= f.button :submit, "T'inscrire !" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
</div>
