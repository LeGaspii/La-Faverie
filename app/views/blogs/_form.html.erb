, class: "btn btn-gradient"<%= simple_form_for(@blog)  do |f| %>
  <div class="form-inputs">
    <%= f.input :title, placeholder: 'Ton titre ...' %>
    <%= f.rich_text_area :rich_body, placeholder: 'Tu peux commencer à écrire ici...         Il est possible d\'insérer des images.' %>
  </div>
  <div class="form-inputs">
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  </div>
  <div class="mt-2 form-actions text-white container text-center">
    <%= f.button :submit, class: "btn btn-gradient" %>
  </div>
<% end %>
