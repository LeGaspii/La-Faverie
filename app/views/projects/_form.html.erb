<%= simple_form_for(@project) do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :deadline %>
    <%= f.input :budget %>
    <%= f.input :photo %>
  </div>
  <div class="form-inputs">
    <%= f.rich_text_area :rich_body %>
  </div>
  <div class="form-actions flex items-center shadow bg-blue-500 px-4 py-2 text-white hover:bg-blue-400 my-1 justify-self-center">
    <%= f.button :submit %>
  </div>
<% end %>
