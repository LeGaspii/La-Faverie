<%= simple_form_for(@project) do |f| %>
  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :deadline %>
    <%= f.input :budget %>
    <%= f.input :photo %>
  </div>
  <div class="form-inputs">
    <%= f.rich_text_area :rich_body %>
  </div>
  <div class="mt-2 form-actions btn btn-gradient container text-center">
    <%= f.button :submit %>
  </div>
<% end %>
