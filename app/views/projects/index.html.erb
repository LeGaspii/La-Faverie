
<% @projects.each do |project| %>
<div class="shadow bg-white mt-1">
    <div class=" bg-size bg-cover bg-center"
         style="background-image: url('<%= cl_image_path project.photo.key, width: 1000, crop: :fill %>')">
        <div class="p-4 h-32 flex items-end text-white">
            <h3 class="mb-2"><%= project.name %></h3>
        </div>
    </div>
    <div class="p-4">
        <p class="text-gray-600 text-sm"><%= project.rich_body  %></p>
        <div class="mt-4">
          <%= link_to project_path(project) do %>
              <p class="no-underline mr-4 text-blue-500 hover:text-blue-400"><strong>Read more</strong></p>
            <% end %>
        </div>
    </div>
</div>
<% end %>
